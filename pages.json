{
  //插件自动引入 参考：https://uniapp.dcloud.io/collocation/pages?id=easycom
  "easycom": {
    "autoscan": true,
    "custom": {
      "^c-(.*)": "@/components/$1/index.vue",
      "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
    }
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/home/home",
      "style": {
        "navigationBarTitleText": "首页",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/me/me",
      "style": {
        "navigationBarTitleText": "我的",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/login/login",
      "style": {
        "navigationBarTitleText": "登录"
      }
    },
    {
      "path": "pages/login/register",
      "style": {
        "navigationBarTitleText": "注册"
      }
    },
    {
      "path": "pages/login/forget",
      "style": {
        "navigationBarTitleText": "重置密码"
      }
    },
    {
      "path": "pages/category/category",
      "style": {
        "navigationBarTitleText": "商品分类",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/product/list",
      "style": {
        "navigationBarTitleText": "商品列表",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/product/product",
      "style": {
        "navigationStyle": "custom",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/cart/cart",
      "style": {
        "navigationBarTitleText": "购物车",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/order/order",
      "style": {
        "navigationBarTitleText": "我的订单",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/pay/pay",
      "style": {
        "navigationBarTitleText": "确认订单",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/coupon/coupon",
      "style": {
        "navigationBarTitleText": "我的优惠券",
        "enablePullDownRefresh": false
      }
    },
    // below for demo
    {
      "path": "demo/pages/demo",
      "style": {
        "enablePullDownRefresh": true,
        "navigationStyle": "custom"
      }
    },
    {
      "path": "demo/pages/wechat-only",
      "style": {
        "navigationBarTitleText": "请使用微信打开"
      }
    },
    {
      "path": "demo/pages/wechat-cannot",
      "style": {
        "navigationBarTitleText": "请使用浏览器打开"
      }
    },
    {
      "path": "demo/pages/share",
      "style": {
        "navigationBarTitleText": "分享",
        "app-plus": {
          "titleNView": {
            "type": "transparent"
          }
        }
      }
    },
    {
      "path": "demo/pages/load-list"
    },
    {
      "path": "demo/pages/load-list-swiper"
    },
    {
      "path": "demo/pages/query-tabs"
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  // icon size 81px * 81px 参考：https://uniapp.dcloud.io/api/ui/tabbar?id=settabbaritem
  "tabBar": {
    "color": "#999", //icon color #444
    "selectedColor": "#ff6900",
    "borderStyle": "white",
    "backgroundColor": "",
    "list": [
      {
        "pagePath": "pages/home/home",
        "iconPath": "static/tab-bar/home.png",
        "selectedIconPath": "static/tab-bar/home-on.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/category/category",
        "iconPath": "static/tab-bar/category.png",
        "selectedIconPath": "static/tab-bar/category-on.png",
        "text": "分类"
      },
      {
        "pagePath": "pages/cart/cart",
        "iconPath": "static/tab-bar/cart.png",
        "selectedIconPath": "static/tab-bar/cart-on.png",
        "text": "购物车"
      },
      {
        "pagePath": "pages/me/me",
        "iconPath": "static/tab-bar/me.png",
        "selectedIconPath": "static/tab-bar/me-on.png",
        "text": "我的"
      }
      // ,
      // {
      //   "pagePath": "demo/pages/demo",
      //   "iconPath": "static/tab-bar/demo.png",
      //   "selectedIconPath": "static/tab-bar/demo-on.png",
      //   "text": "demo"
      // }
    ]
  }
}